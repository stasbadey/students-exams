WindowManager:
    MainScreen:
    ChoiceScreen:
    ByAverageMarkScreen:
    ByNumberOfGroupScreen:
    ByMarkAndSubjectScreen:


<MainScreen>:

    name: 'MainScreen'


    FloatLayout:


        Button:
            text:'GO'
            font_size: 20
            size_hint: 1, 0.2
            pos_hint: {'x': 0.0, 'y': 0.01}
            on_press:
                root.manager.current='ChoiceScreen'



<ChoiceScreen>:

    name: 'ChoiceScreen'

    FloatLayout:

        Label:
            id: output
            size_hint: 0.6, 0.5
            pos_hint: {"x": 0.2, 'y': 0.35}

        Button:
            text:'average mark'
            size_hint: (0.33333,0.2)
            pos_hint: {'x': 0.0, 'y': 0.01}
            on_press:
                root.manager.current = 'ByAverageMarkScreen'
        Button:
            text:'number of group'
            size_hint: (0.33333,0.2)
            pos_hint: {'x': 0.33333, 'y': 0.01}
            on_press:
                root.manager.current = 'ByNumberOfGroupScreen'
        Button:
            text:'mark and by subject'
            size_hint: (0.33333,0.2)
            pos_hint: {'x': 0.66666, 'y': 0.01}
            on_press:
                root.manager.current = 'ByMarkAndSubjectScreen'
        Button:
            text:'Back'
            size_hint: (0.1,0.05)
            pos_hint: {'x': 0.85, 'y': 0.9}
            on_press:
                root.manager.current = 'MainScreen'






<ByAverageMarkScreen>:

    name: 'ByAverageMarkScreen'
    label_av: main
    input: average_mark



    FloatLayout:


        ScrollView:
            #size_hint_y: 1
            #size_hint_x: 0.9
            size_hint: (None, None)
            size: (1050, 500)
            pos_hint: {"x": 0.17, 'y': 0.3}
            Label:
                id: main
                text: ""
                halign: 'left'
                valign: 'top'
                size_hint: None, None
                size: self.texture_size
                font_name: 'DroidSansMono'
                background_color: (0, 0, 1, 0.1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos



        TextInput:
            id: average_mark
            hint_text:'Enter average mark'
            pos_hint: {'x': 0.3, 'y': 0.2}
            size_hint: 0.4, 0.1

        Button:
            text: 'Search'
            size_hint: (0.3,0.15)
            pos_hint: {'x': 0.19, 'y': 0.01}
            on_press:
                root.search_student()

        Button:
            text: 'Delete'
            size_hint:(0.3,0.15)
            pos_hint: {'x': 0.51, 'y': 0.01}
            on_press:
                root.delete_student()

        Button:
            text:'Back'
            size_hint: (0.1,0.05)
            pos_hint: {'x': 0.85, 'y': 0.9}
            on_press:
                root.manager.current='ChoiceScreen'




