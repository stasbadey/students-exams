WindowManager:
    MainScreen:
    ChoiceScreen:
    ByAverageMarkScreen:
    ByNumberOfGroupScreen:
    ByMarkAndSubjectScreen:


<MainScreen>:

    name: 'MainScreen'

    FloatLayout:
        canvas:
            Color:
                rgba:(1,1,1,1)
            Rectangle:
                pos:self.pos
                size:self.size
        Label:
            id: output
            size_hint: 0.6, 0.5
            pos_hint: {"x": 0.2, 'y': 0.35}
            canvas:
                Color:
                    rgba:(0,0,0,1)
                Rectangle:
                    pos:self.pos
                    size:self.size
        Button:
            text:'GO'
            font_size: 20
            size_hint: 1, 0.2
            pos_hint: {'x': 0.0, 'y': 0.01}
            on_press:
                root.manager.current='ChoiceScreen'



<ChoiceScreen>:

    name: 'ChoiceScreen'

    FloatLayout:
        canvas:
            Color:
                rgba:(1,1,1,1)
            Rectangle:
                pos:self.pos
                size:self.size
        Label:
            id: output
            size_hint: 0.6, 0.5
            pos_hint: {"x": 0.2, 'y': 0.35}
            canvas:
                Color:
                    rgba:(0,0,0,1)
                Rectangle:
                    pos:self.pos
                    size:self.size
        Button:
            text:'average mark'
            size_hint: (0.33333,0.2)
            pos_hint: {'x': 0.0, 'y': 0.01}
            on_press:
                root.manager.current = 'ByAverageMarkScreen'
        Button:
            text:'number of group'
            size_hint: (0.33333,0.2)
            pos_hint: {'x': 0.33333, 'y': 0.01}
            on_press:
                root.manager.current = 'ByNumberOfGroupScreen'
        Button:
            text:'mark and by subject'
            size_hint: (0.33333,0.2)
            pos_hint: {'x': 0.66666, 'y': 0.01}
            on_press:
                root.manager.current = 'ByMarkAndSubjectScreen'
        Button:
            text:'Back'
            size_hint: (0.1,0.05)
            pos_hint: {'x': 0.85, 'y': 0.9}
            on_press:
                root.manager.current = 'MainScreen'






<ByAverageMarkScreen>:

    name: 'ByAverageMarkScreen'
    label_av: output
    input: average_mark



    FloatLayout:
        canvas:
            Color:
                rgba:(1,1,1,1)
            Rectangle:
                pos:self.pos
                size:self.size
        Label:
            id: output
            size_hint: 0.6, 0.5
            pos_hint: {"x": 0.2, 'y': 0.35}
            canvas:
                Color:
                    rgba:(0,0,0,1)
                Rectangle:
                    pos:self.pos
                    size:self.size


        TextInput:
            id: average_mark
            hint_text:'Enter text'
            pos_hint: {'x': 0.3, 'y': 0.2}
            size_hint: 0.4, 0.1

        Button:
            text: 'Search'
            size_hint: (0.3,0.15)
            pos_hint: {'x': 0.19, 'y': 0.01}
            on_press:
                root.search_student()

        Button:
            text: 'Delete'
            size_hint:(0.3,0.15)
            pos_hint: {'x': 0.51, 'y': 0.01}
            on_press:
                root.delete_student()

        Button:
            text:'Back'
            size_hint: (0.1,0.05)
            pos_hint: {'x': 0.85, 'y': 0.9}
            on_press:
                root.manager.current='ChoiceScreen'




